---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCardAlt from "../components/HorizontalCardAlt.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug";
import AnimatedHeroText from "../components/AnimatedHeroText.astro";
import HorizontalCard from "@components/HorizontalCard.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <AnimatedHeroText />

    <div class="text-5xl font-bold">I'm Ojolowo Boluwatife</div>
    <div class="text-3xl py-3 font-bold">Software Engineer & TechPreneur</div>
    <div class="py-2 flex flex-col gap-2">
      <text class="text-lg">
        I am a Software Engineer dedicated to delivering high-quality work that
        makes life "soft" for everyone
      </text>

      <text class="text-lg">
        If you're looking for someone who brings value, reliability, and a
        results-driven mindset, letâ€™s connect and explore how we can work
        together.
      </text>
    </div>

    <div class="mt-8 flex gap-2 items-center">
      <a class="btn" href="https://twitter.com/ojolowoblue" target="_blank">
        Let's connect!</a
      >
      <a
        href="https://cal.com/ojolowo"
        target="_blank"
        class="btn btn-outline !uppercase"
      >
        BOOK A CALL
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My works {"</>"}</div>
  </div>

  <HorizontalCardAlt
    title="Busha 3.0"
    img="/projects/busha.png"
    desc="Your Money App"
    url="https://dash.busha.io"
  />
  <div class="divider my-0"></div>
  <HorizontalCardAlt
    title="Busha Commerce SDK"
    img="/projects/npm.svg"
    desc="Developer tool"
    url="https://www.npmjs.com/package/@busha/commerce-js"
    badge="FOSS"
  />
  <div class="divider my-0"></div>
  <HorizontalCardAlt
    title="Abba Collections"
    img="/projects/abba.png"
    desc="E-commerce platform"
    url="https://v1.abbacollections.com/"
  />
  <div class="divider my-0"></div>
  <HorizontalCardAlt
    title="Fedworks Africa"
    img="/projects/fedworks.svg"
    desc="Portfolio website"
    url="https://fedworks.africa/"
    badge="Featured"
  />
  <div class="divider my-0"></div>
  <HorizontalCardAlt
    title="ESBuild Live Server"
    img="/projects/npm.svg"
    desc="Developer tool"
    url="https://www.npmjs.com/package/esbuild-live-server"
    badge="FOSS"
  />
  <div class="divider my-0"></div>
  <HorizontalCardAlt
    title="Ubiscore"
    desc="AI Powered Privacy Scoring Platform"
    url="https://app.ubiscore.com"
    badge="Featured"
    img="/projects/ubiscore.jpeg"
  />
  <div class="divider my-0"></div>
  <HorizontalCardAlt
    title="Metricks"
    desc="Affiliate marketing software"
    url="https://app.metricks.io"
    badge="Featured"
    img="/projects/metricks-icon.png"
  />
  <div class="divider my-0"></div>
  <HorizontalCardAlt
    title="Edusko"
    img="/projects/edusko.png"
    desc="Education Technology"
    url="https://www.edusko.com"
    badge="Featured"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Recent blog posts</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + createSlug(post.data.title, post.slug)}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
