---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug";
import AnimatedHeroText from "../components/AnimatedHeroText.astro";
const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <AnimatedHeroText />

    <div class="text-5xl font-bold">
      I'm Ojolowo Boluwatife A.K.A. The Softlife Engineer
    </div>
    <div class="text-3xl py-3 font-bold">
      I want to help build product that improves daily living for everyone.
    </div>
    <div class="py-2 flex flex-col gap-2">
      <text class="text-lg">
        I am a Software Engineer dedicated to delivering high-quality work that
        not only meets expectations but exceeds them. With 6 years of experience
        and a strong focus on detail, innovation, and efficiency, I bring value
        by aligning my expertise with business goals to create meaningful
        results.
      </text>

      <text class="text-lg">
        Collaboration is at the heart of what I do. Whether working with teams
        or clients, I strive to understand challenges, contribute strategic
        solutions, and ensure seamless execution. My approach is rooted in
        professionalism, adaptability, and a deep commitment to excellence.
      </text>

      <text class="text-lg">
        If you're looking for someone who brings value, reliability, and a
        results-driven mindset, letâ€™s connect and explore how we can work
        together.
      </text>
    </div>
    <div class="mt-8">
      <a
        href="https://cal.com/ojolowo"
        target="_blank"
        class="btn btn-outline !uppercase"
      >
        BOOK A CALL
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My works {"</>"}</div>
  </div>

  <HorizontalCard
    title="Abba Collections"
    img="/projects/abba.jpeg"
    desc="E-commerce platform"
    url="https://v1.abbacollections.com/"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Fedworks Africa"
    img="/projects/fedworks.jpeg"
    desc="Portfolio website"
    url="https://fedworks.africa/"
    badge="Featured"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="ESBuild Live Server"
    img="/projects/npm.webp"
    desc="Developer tool"
    url="https://www.npmjs.com/package/esbuild-live-server"
    badge="FOSS"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Ubiscore"
    desc="AI Powered Privacy Scoring Platform"
    url="https://app.ubiscore.com"
    badge="Featured"
    img="/projects/ubiscore.png"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Metricks"
    desc="Affiliate marketing software"
    url="https://app.metricks.io"
    badge="Featured"
    img="/projects/metricks.png"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Edusko"
    img="/projects/edusko.jpeg"
    desc="Education Technology"
    url="https://www.edusko.com"
    badge="Featured"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Recent blog posts</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + createSlug(post.data.title, post.slug)}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
